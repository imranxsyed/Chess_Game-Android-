                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </TableRow>
        </TableLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/autoButton"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/auto_button" />

        <Button
            android:id="@+id/undoButton"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:layout_alignTop="@+id/autoButton"
            android:layout_toLeftOf="@+id/autoButton"
            android:background="@drawable/undo_button"
            />

        <Button
            android:id="@+id/drawButton"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:layout_alignBottom="@+id/undoButton"
            android:layout_marginLeft="15dp"
            android:background="@drawable/draw_button" />

        <Button
            android:id="@+id/resignButton"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:layout_alignBottom="@+id/drawButton"
            android:layout_alignTop="@+id/drawButton"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/drawButton"
            android:background="@drawable/resign" />
    </RelativeLayout>
</LinearLayout>